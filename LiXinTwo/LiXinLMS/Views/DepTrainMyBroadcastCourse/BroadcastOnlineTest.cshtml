
@using LiXinModels.Examination.DBModel;
@using LiXinModels.CourseManage
@{
    var CoCoursePaper = ViewBag.Co_CoursePaper as Co_CoursePaper;
    var exampapger = ViewBag.exampapger as tbExampaper;
    var course = ViewBag.course as Co_Course;
    ViewBag.Title = "课程详情";
}
    <div class="main-c">
        @Html.Action("MyBroadcastCourse", "DepTrainMyBroadcastCourse", new { id = ViewBag.courseid })
        <input type="hidden" id="txt_CourseId" value="@ViewBag.courseid"/>
        <table class="tab-List">
            <thead>
                <tr>
                    <th>试卷名称</th>
                    <th>考试时长(分钟)</th>
                    <th>考试时间</th>
                    <th>通过线</th>
                    <th>试卷总分</th>
                    <th>允许(进入)考试次数</th>
                </tr>
            </thead>
            <tbody>
                @if (CoCoursePaper != null && course!=null && @course.IsTest == 1 && exampapger!=null)
                { 
                    <tr>
                        <td>
                            <div class="tl ovh span30" title="@exampapger.ExampaperTitle">@exampapger.ExampaperTitle</div>
                        </td>
                        <td>
                            @CoCoursePaper.Length
                        </td>
                        <td>
                            课程结束后 @CoCoursePaper.Hour 小时
                        </td>
                        <td>
                            @(CoCoursePaper.LevelScore)%
                        </td>
                        <td>
                            @CoCoursePaper.TotalScore 
                        </td>
                        <td>
                            <span>@CoCoursePaper.TestTimes</span>
                        </td>
                    </tr>
                }
                else
                {
                    <tr><td colspan="6">暂无数据</td></tr>
                }
            </tbody>
            <tfoot></tfoot>
        </table>
        
        <div class="tc mt10">@Html.ActionLink("返回", "MyBroadcastList", "DepTrainMyBroadcastCourse", new { p = "1" }, new { @class = "btn btn-cancel" })</div>
    </div>
    <script type="text/javascript">
        $(document).ready(function() {
            $("#ul_menu li:eq(2)").addClass("On").siblings("li").removeClass("On");
        });
    </script>
