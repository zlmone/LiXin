@using LiXinModels
@{
    Layout = null;
    var modell = ViewBag.model as Sys_ParamConfig;
}

<form id="fnSumitConfig">
    <h2 class="tit-h2 mt10">
        <i></i>
        <span class="tit-con">过时课程考勤上报截止时间</span>
    </h2>
    <table class="tab-Form mt10">
        <tr>
            <td class="Tit span20">过时课程考勤上报截止时间：</td>
            <td>
                <div class="fl">
                <input type="text" class="span5" name="Anumber" id="level_A" maxlength="5" value="@(modell.ConfigValue)"/>小时            
                </div>
            </td>
        </tr>
        <tr>
            <td class="Tit"></td>
            <td><input type="submit" value="确定" id="btn_Add" class="btn"/></td>
        </tr>
    </table>
</form>
    <script type="text/javascript">
        $(document).ready(function () {


            $("#fnSumitConfig").validate({
                event: "blur",
                rules: {
                    Anumber: { required: true, number: true, min: -1, max: 100000 }
                },
                messages: {
                    Anumber: { required: "请输入时间", number: "请输入大于等于-1的整数", min: "请输入大于等于-1的整数", max: "输入小时小于100000" }
                },
                errorPlacement: function (error, element) {
                    var eid = element.attr('name');
                    if (element.is(':radio') || element.is(':checkbox')) {
                        $('input[name=' + eid + ']:last').next().after(error);
                    } else {

                        error.insertAfter(element.parent());
                    }
                },
                submitHandler: fnSumitConfig
            });


        });

        function fnSumitConfig() {

            var t = $("#level_A").val();
            if (t.indexOf(".") >= 0) {
                art.dialog.tips('请输入整数', 3);
            } else {
                $.post("/ParamConfig/fUpdateParamConfig?configType=51&configValue=" + t, function(data) {
                    if (data.result == 1) {
                        art.dialog.tips('配置成功', 3);
                    } else {
                        art.dialog.tips('配置失败', 3);
                        ;
                    }
                });
            }
        }
    </script>

