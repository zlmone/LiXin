@using LiXinModels.DepCourseManage

@{
    Layout =null;
    var course =(ViewBag.Course as Dep_Course)??new Dep_Course();
    var CourseResourselist = ViewBag.CourseResourse as List<Dep_CourseResource>;
}

<div class="main-c">
        <div class="course-de">
            <table class="tab-Form" style="border:none;">
                @if (ViewBag.IsDeptFlag == 1)
                {
                    <tr>
                        <td class="Tit span13">
                            课程类别：
                        </td>
                        <td>
                            @course.SortStr
                        </td>
                    </tr>
                }
                <tr>
                    <td class="Tit">
                        必修/选修：
                    </td>
                    <td>@course.IsMustStr
                    </td>
                </tr>
                <tr>
                    <td class="Tit">
                        预订/指定：
                    </td>
                    <td>
                        @course.IsOrderStr
                    </td>
                </tr>
                <tr>
                    <td class="Tit">
                        最大允许人数：
                    </td>
                    <td>@course.NumberLimited
                    </td>
                </tr>
                @*<tr>
                    <td class="Tit">
                        是否可折算CPA学时：
                    </td>
                    <td>@course.IsCPAStr
                    </td>
                </tr>*@
                <tr>
                    <td class="Tit">
                        是否允许直接退订：
                    </td>
                    <td> @(course.IsLeave == 1?"否":"是")
                    </td>
                </tr>
            </table>
            <div class="oth">
                <h4>
                    课程大纲：</h4>
                <div class="co-memo  do_warp"  style=" overflow:auto">
                    @if (!string.IsNullOrWhiteSpace(course.Memo))
                    {
                        @Html.Raw(course.Memo)
                    }
                    else
                    {
                        <p>
                            暂无内容</p>
                    }
                </div>
                <h4>
                    课程资源：</h4>
                <table class="tab-List" >
                    <thead>
                        <tr>
                            <th>
                                资源名称
                            </th>
                            <th>
                                资源类型
                            </th>
                            <th>
                                资源大小
                            </th>
                        </tr>
                    </thead>
                    <tbody id="ziyuan">
                        @if (CourseResourselist!=null && CourseResourselist.Find(p => p.ResourceType == 0) != null)
                        {
                            foreach (var coCourseResource in CourseResourselist)
                            {
                                if (coCourseResource.ResourceType == 0)
                                {
                            <tr>
                                <td>
                                    <div class="tl">@coCourseResource.ResourceName</div>
                                </td>
                                <td>@(coCourseResource.ExtendName)
                                </td>
                                <td>@(coCourseResource.ResourceSize)K
                                </td>
                            </tr>
                                }
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">
                                    暂无数据
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <h4>
                    课程附件：</h4>
                <table class="tab-List">
                    <thead>
                        <tr>
                            <th>
                                附件名称
                            </th>
                            <th>
                                附件类型
                            </th>
                            <th>
                                附件大小
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (CourseResourselist!=null && CourseResourselist.Find(p => p.ResourceType == 1) != null)
                        {
                            foreach (var coCourseResource in CourseResourselist)
                            {
                                if (coCourseResource.ResourceType == 1)
                                {
                            <tr>
                                <td>
                                    <div class="tl">@coCourseResource.ResourceName</div>
                                </td>
                                <td>@(coCourseResource.ExtendName)
                                </td>
                                <td>@(coCourseResource.ResourceSize)K
                                </td>
                            </tr>
                                }
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">
                                    暂无数据
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                
               
                <h4>
                    学员报名明细：</h4>
                <table class="tab-List">
                    <thead>
                        <tr>
                            <th class="span6">
                                姓名
                            </th>
                            <th class="span6">
                                性别
                            </th>
                            <th>
                                部门
                            </th>
                            <th class="span10">
                                培训级别
                            </th>
                            <th class="span10">
                                报名性质
                            </th>  
                        </tr>
                    </thead>
                    <tbody id="Courstlist">
                    </tbody>
                    <tfoot>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    
<script id="CourseListTemplate" type="text/x-jsrender">
        {{for #data}}
        <tr>
            <td>
                {{>Realname}}
            </td>
            <td>
                {{:SexStr}}
            </td>  
            <td>
                {{>DeptName}}
            </td>            
            <td>
                {{:TrainGrade}}
            </td>  
            <td>       
                {{if IsAppoint==0}}
                    自主预订
                {{else IsAppoint==1}}
                    部门指定
                {{else}}
                     考勤指定
                {{/if}}   
            </td>        
        </tr>
        {{/for}}
</script>

<script type="text/javascript">
    $(document).ready(function () {
        fOnload();
    });
    function fOnload() {
        $("#Courstlist").JsRenderData({
            sourceUrl: '/DepCourseOpenOthersCheck/GetTeacherCourseUserList?courseid=@course.Id',
            isPage: true,
            pageSize: 10,
            pageIndex: 1,
            templateID: "CourseListTemplate"
        }); 
    }   
</script>


