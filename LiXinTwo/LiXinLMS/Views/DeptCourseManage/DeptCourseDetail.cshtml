                            <td>
                                <a onclick="loadPinFile('@(item.RealName)','@(item.RealName)');" class="icon idown" title="我要下载"></a>
                            </td>
                        </tr>
                        }
                    }
                    else
                    {
        	
                        <tr>
                            <td colspan="2">
                                <div class="tc">
                                    暂无附件</div>
                            </td>
                        </tr>
            
                    }
                </tbody>
            </table>
        </div>
    </div>
