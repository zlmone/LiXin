@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "授课课程管理";
}
<div class="main-c">
    @(Html.Action("SiteMapLink", "Common", new
{
    linkName = "授课课程管理"
}))
    <div class="tab-bk">
        <ul>
            <li class="On">集中授课</li>
            @*<li>视频课程</li>
                <li>CPA课程</li>
                <li>部门/分所培训</li>*@
        </ul>
    </div>
    <div class="so-set">
        <table class="tab-Form">
            <tr>
                <td class="Tit span6">
                    课程名称：
                </td>
                <td class="span17">
                    <input type="text" id="txt_CourseName" value="请输入搜索内容" info="" class="Box span16 searchclass" />
                </td>
                <td class="Tit span6">
                    课程时间：
                </td>
                <td>
                    <div class="data-choose">
                        <input type="text" onclick="WdatePicker({ dateFmt: 'yyyy-MM-dd', maxDate: '#F{$dp.$D(\'end\',{m:-1})}' });"
                            readonly="readonly" id="start" />
                        <i></i>
                    </div>
                    至
                    <div class="data-choose">
                        <input type="text" onclick="WdatePicker({ dateFmt: 'yyyy-MM-dd', minDate: '#F{$dp.$D(\'start\',{m:1})}' });"
                            readonly="readonly" id="end" />
                        <i></i>
                    </div>
                </td>
                <td rowspan="2" class="so-do">
                    <input type="button" value="查询" id="btn_Select" class="btn" />
                </td>
            </tr>
            <tr>
                <td class="Tit span6">
                    开放级别：
                </td>
                <td>
                    <div class="sel span28">
                        @{
                            foreach (var item in @ViewBag.trainGrade)
                            {
                            <input type="checkbox" value="@item" name="OpenLevel" /><label>@item</label>
                            }      
                        }
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <div class="so-seq">
        <select id="sel_sort">
            <option value="-1">所有课程类型</option>
            <option value="1">内部培训</option>
            <option value="2">社会招聘</option>
            <option value="3">新进员工</option>
            <option value="4">实习生</option>
        </select>
        <select id="sel_status">
            <option value="-1">所有课程状态</option>
            <option value="1">预订中</option>
            <option value="2">进行中</option>
            <option value="3">已结束</option>
        </select>
    </div>
    <table class="tab-List mt10">
        <thead>
            <tr>
                <th class="span4">
                    序号
                </th>
                <th>
                    课程名称
                </th>
                <th class="span12">
                    开放级别
                </th>
                <th class="span12">
                    课程类型
                </th>
                <th class="span14">
                    授课时间
                </th>
                <th class="span12">
                    报名人数/<br />
                    最大容纳人数
                </th>
                <th class="span10">
                    课程状态
                </th>
                <th class="span8">
                    操作
                </th>
            </tr>
        </thead>
        <tbody id="Courstlist">
        </tbody>
        <tfoot>
        </tfoot>
    </table>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        initSearch();
        $("#txt_CourseName").val('@(ViewBag.cname)');
        if("@(ViewBag.cmust)"!=""){
            if('@(ViewBag.cmust)'.indexOf(",")>-1){
                var strs='@(ViewBag.cmust)'.split(",");
                $.each(strs, function(index,callback){$('input[name="OpenLevel"][value="'+strs[index]+'"]').attr('checked',true);});
            }else{
                $('input[name="OpenLevel"][value="@(ViewBag.cmust)"]').attr('checked',true);
            }
        }
        if("@(ViewBag.cstartTime)"!=""){
            $("#start").val('@(ViewBag.cstartTime)');
        }
        if("@(ViewBag.cendTime)"!=""){
            $("#end").val('@(ViewBag.cendTime)');
        }
        $("#sel_status").val('@(ViewBag.cstate)');
        $("#sel_sort").val('@(ViewBag.csort)');
        fOnload(@(ViewBag.page));
        $("#btn_Select").click(function () {
            fOnload(1);
        });
        $("#sel_status,#sel_sort").change(function () {
            fOnload(1);
        });
    });
    function fOnload(page) {
        var openLevel = "";
        $("input[name='OpenLevel']").each(function (index) {
            if ($(this).attr("checked") == "checked") {
                openLevel = openLevel == "" ? $(this).val() : openLevel + "," + $(this).val();
            }
        });

        var v = "CourseName=" + escape(getSearchWord("txt_CourseName")) + "&openLevel=" + openLevel + "&sort=" + $("#sel_sort").val()
               + "&status=" + $("#sel_status").val() + "&start=" + $("#start").val() + "&end=" + $("#end").val();
        $("#Courstlist").JsRenderData({
            sourceUrl: '/AllTeacherCourse/FALLTeacherCourseList?' + v,
            isPage: true,
            pageSize: 10,
            pageIndex: page,
            templateID: "CourseListTemplate"
        });
    }
</script>
<script id="CourseListTemplate" type="text/x-jsrender">
        {{for #data}}
        <tr>
            <td>
                {{:#index+1}}
            </td>
            <td>
                <div class="ovh span20 tl" title="{{:CourseNameStr}}">{{:CourseNameStr}}</div>
            </td>
            <td>
                <div class="ovh span12 tl" title="{{:OpenLevel}}">{{:OpenLevel}}</div>
            </td>
            <td>
                {{:SortStr}}
            </td>            
            <td>
                <div class="tl f11">{{:TeacherCourseTime}}</div>
            </td>            
            <td>
                {{:number}}/{{:NumberLimited}}
            </td>
            <td>
                {{:CourseStatus}}               
            </td>            
            <td>            
              <a href="/AllTeacherCourse/CourseMain?id={{:Id}}" class="icon iview" title="查看详情"></a>             
            </td>
        </tr>
        {{/for}}
</script>
