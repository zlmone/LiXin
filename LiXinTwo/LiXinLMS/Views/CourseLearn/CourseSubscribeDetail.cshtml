@using LiXinLanguage
@using LiXinModels.CourseManage
@{
    ViewBag.Title = NavigateMenuLanguage.CourseSubscribeDetail;
    var course = ViewBag.model as Co_Course;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="../../Scripts/report/highcharts.js" type="text/javascript"></script>
<script src="../../Scripts/report/column.js" type="text/javascript"></script>
<script src="../../Scripts/report/pie.js" type="text/javascript"></script>
<div class="main-c">
    @(Html.Action("SiteMapLink", "Common", new { linkName = "CourseSubscribeDetail" }))
    <h3 class="tit-h3">
        课程基本信息</h3>
    <table class="tab-Form mt10">
        <tr>
            <td class="Tit span16">
                课程名称：
            </td>
            <td>
                <strong>@course.CourseName</strong>
            </td>
            <td class="Tit span10">
                课程性质：
            </td>
            <td>
                <strong>@(course.IsMustStr)</strong>
            </td>
        </tr>
        <tr>
            <td class="Tit">
                报名人数/最大容纳人数：
            </td>
            <td>
                <strong>@course.HasEntered/@course.NumberLimited</strong>
            </td>
            <td class="Tit">
                课程讲师：
            </td>
            <td>
                <strong>@course.TeacherName</strong>
            </td>
        </tr>
    </table>
    <h3 class="tit-h3 mt20">
        课程预订结果分析</h3>
    <div class="h32 mt10">
        <div id="showcolumn" style="width: 50%; height: 300px; float: left; display: none;">
        </div>
        <div id="showpie" style="width: 50%; height: 300px; margin: auto;">
        </div>
    </div>
    <h3 class="tit-h3 mt20">
        课程预订明细</h3>
    <div id="Search" class="so-set">
        <table class="tab-Form">
            <tr>
                <td class="Tit span4">
                    姓名：
                </td>
                <td class="span11">
                    <input type="text" class="span10 searchclass" id="realname" value="请输入姓名" info="" />
                </td>
                <td class="Tit span6">
                    部门/分所：
                </td>
                <td class="span21">
                    <input type="text" class="span20 searchclass" id="deptname" value="请输入部门/分所" info="" />
                </td>
                <td class="so-do">
                    <input class="btn" type="button" value="搜索" id="btnSearch" onclick=" InitData(); " />
                </td>
            </tr>
        </table>
    </div>
    <div class="so-seq">
        <select id="sltApply" onchange=" InitData(); ">
            <option value="10">是否报名</option>
            <option value="1" selected="selected">是</option>
            <option value="0">否</option>
        </select>

        <select id="sltIsAppoint" onchange=" InitData(); ">
            <option value="10">报名性质</option>
            <option value="0">自主预订</option>
            <option value="1">部门指定</option>
            <option value="2">总所指定</option>
            <option value="3">补预订</option>
        </select>

        <span class="list-do">
            <input type="button" class="btn" value="导出EXCEL" onclick="ExportUser();" />
            <input type="button" class="btn" value="短信/邮件提醒" onclick="Remind(GetChecked('userList')); " />
        </span>
    </div>
    <!-- 列表 -->
    <table id="userall" class="tab-List mt10">
        <thead>
            <tr>
                <th class="span6">
                    <input type="checkbox" value="0" id="selectall" />
                </th>
                <th class="span6">
                    序号
                </th>
                <th class="span10">
                    姓名
                </th>
                <th class="span10" jsrendersortfield="Sys_User.Sex" sort="desc">
                    性别
                </th>
                <th>
                    部门/分所
                </th>
                <th class="span18" jsrendersortfield="Sys_User.TrainGrade" sort="desc">
                    培训级别
                </th>
                <th class="span10">
                    是否报名
                </th>
                <th class="span18">
                    报名性质
                </th>
                <th class="span18">
                    报名时间
                </th>
            </tr>
        </thead>
        <tbody id="userList">
        </tbody>
        <tfoot>
        </tfoot>
    </table>
    <div class="mt20 tc">
        <input type="button" class="btn btn-co" onclick="UpdateOrderStatus(@course.Id);" value="排队状态更改" />
        <a id="btnBack" class="btn btn-cancel" onclick=" window.location.href = '/CourseLearn/CourseSubscribe?p=1'; ">
            返回</a>
    </div>
</div>
<input type="hidden" id="hidSelUserIds" />
<script id="userListTemplate" type="text/x-jsrender">
    {{for #data}}
    <tr>
        <td>
            <input type="checkbox" id="{{:UserId}}" value="{{:UserId}}" />
        </td>  
        <td>{{:#index+1}}</td>
        <td>{{:Realname}}</td> 
        <td>{{:SexStr}}</td> 
        <td><div class="ovh span30 tl">{{:DeptName}}</div></td> 
        <td>{{:TrainGrade}}</td> 
        <td>{{:ApplyStr}}</td> 
        <td>{{:ApplyPropertiesStr}}</td> 
        <td>{{:OrderTimeStr}}</td>
    </tr> 
    {{/for}}
</script>
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        initSearch();
        InitDraw();
        InitData();
    });

    function InitDraw() {
        $.getJSON("/CourseLearn/GetDrawSubscribe?courseId=@course.Id", function (data) {
            
            var piechart_value = DrawImagePie(data.pie);
            var piechart = new Highcharts.Chart(piechart_value);

//            var columnchart_value = DrawImageColumn(data.column);
//            var columnchart = new Highcharts.Chart(columnchart_value);
        });
    }

    function InitData() {
        var apply = $("#sltApply").val();

        var IsAppoint=$("#sltIsAppoint").val();
        //if ($("#cbxApply1").attr("checked")) {
        //    apply += "1";
        //}
        //if ($("#cbxApply0").attr("checked")) {
        //    apply += "0";
        //}
        var v = "courseId=@course.Id&realName=" + escape(getSearchWord("realname")) + "&deptName=" + escape(getSearchWord("deptname")) + "&apply=" + apply+"&IsAppoint="+IsAppoint;
        $("#userList").JsRenderData({
            sourceUrl: '/CourseLearn/GetCourseSubscribeUserList?' + v,
            isPage: true,
            pageSize: 10,
            pageIndex: 1,
            jsRenderSortField: "OrderTime",
            jsRenderASC: "desc",
            templateID: "userListTemplate",
            funCallback: function () {
                if(apply=="10"){
                    $("#userList input[type='checkbox']").attr("disabled","disabled");
                }else{
                    SetCheckBox('selectall', 'userList');
                }
            }
        });
    }

    function ExportUser() {
//        var apply = "";
//        if ($("#cbxApply1").attr("checked")) {
//            apply += "1";
//        }
//        if ($("#cbxApply0").attr("checked")) {
//            apply += "0";
//        }
        var apply = $("#sltApply").val();       
        art.dialog({
            content: "由于数据量比较多，需耐心等待，确定要导出吗？",
            ok: function() {
                var v = "courseId=@course.Id&realName=" + escape(getSearchWord("realname")) + "&deptName=" + escape(getSearchWord("deptname")) + "&apply=" + apply;
                window.location.href = "/CourseLearn/ExportCourseSubscribeUserList?" + v;
            },
            cancel: true
        });
    }

    function Remind(ids) {
        if (ids == "") {
            art.dialog.tips( "请选择用户！", 3);
            return;
        }
        if($("#sltApply").val()=="1"){
            $("#hidSelUserIds").val(ids);
            art.dialog.load("/SystemManage/MessageEdit?t=" + new Date(), { title: "消息编辑", id: "EditMessage", width: 600 });
        }else{
            $.post("/CourseLearn/RemindUserSubscribe", { courseId: @course.Id, userIds: ids }, function (data) {
                if (data == 1) {
                    art.dialog.tips( "提醒成功！", 3);
                } else {
                    art.dialog.tips( "提醒失败！",3);
                }
            });
        }
    }

    function Send() {
        var ismust = 0;
        $("input[name='mMust']").each(function (index) {
            if ($(this).attr("checked") == "checked") {
                ismust += parseInt($(this).val());
            }
        });
        $.post("/SystemManage/SendMessageByGroup",
            {
                Uids: $("#hidSelUserIds").val(),
                Title: $.trim(getSearchWord("mTitle")),
                Content: $.trim(getSearchWord("mContent")),
                Must: ismust
            },
            function (data) {
                if (data.result == 1) {
                    art.dialog.tips("提醒成功", 3);
                    art.dialog.list['EditMessage'].close();
                } else {
                    art.dialog.tips("提醒失败", 3);
                }
            }
        );
    }

    function UpdateOrderStatus(id){
        $.getJSON("/CourseLearn/UpdateCourseOrderStatusByCourseId/@course.Id", function (data) {
            if (data == 1) {
                art.dialog.tips( "成功！", 3);
            } else {
                art.dialog.tips( "失败！",3);
            }
        });
    }
</script>
