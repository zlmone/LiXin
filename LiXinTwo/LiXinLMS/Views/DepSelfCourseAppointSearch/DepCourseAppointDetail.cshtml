@using LiXinLanguage
@using LiXinModels.DepCourseManage
@{
    ViewBag.Title = NavigateMenuLanguage.DepCourseAppointDetail;
    var course = ViewBag.model as Dep_Course??new Dep_Course();
}
<div class="main-c">
    @(Html.Action("SiteMapLink", "Common", new { linkName = "DepCourseAppointDetail" }))
    <h3 class="tit-h3">
        课程基本信息</h3>
    <table class="tab-Form mt10">
        <tr>
            <td class="Tit span16">
                课程名称：
            </td>
            <td>
                <strong>@course.CourseName</strong>
            </td>
            <td class="Tit span16">
                课程性质：
            </td>
            <td>
                <strong>@(course.IsMustStr)</strong>
            </td>
            <td class="Tit span16">
                开放级别：
            </td>
            <td>
                <strong>@(course.OpenLevel)</strong>
            </td>
        </tr>
        <tr>
            <td class="Tit">
                报名人数/最大容纳人数：
            </td>
            <td>
                <strong>@course.HasEntered/@course.NumberLimited</strong>
            </td>
            <td class="Tit">
                课程讲师：
            </td>
            <td colspan="3">
                <strong>@course.TeacherName</strong>
            </td>
        </tr>
    </table>
    <h3 class="tit-h3 mt20">
        课程预订明细</h3>
    <div id="Search" class="so-set">
        <table class="tab-Form">
            <tr>
                <td class="Tit span4">
                    姓名：
                </td>
                <td class="span11">
                    <input type="text" class="span10 searchclass" id="realname" value="请输入姓名" info="" />
                </td>
                <td class="Tit span6">
                    培训级别：
                </td>
                <td>
                    <div class="sel">
                        @{
                            foreach (var item in ViewBag.trainGrade)
                            {
                            <input name="cbxTrainGrade" value="@item" type="checkbox" /><label>@item</label>
                            }      
                        }
                    </div>
                </td>
                <td class="so-do">
                    <input class="btn" type="button" value="搜索" id="btnSearch" onclick=" InitData(); " />
                </td>
            </tr>
        </table>
    </div>
    <div class="so-seq">
        <select id="sltOrder" onchange=" InitData(); ">
            <option value="99">报名状态</option>
            <option value="1">已报名</option>
            <option value="0">未报名</option>
            <option value="2">已请假</option>
            <option value="3">已退订</option>
        </select>
        <select id="sltIsAppoint" onchange=" InitData(); ">
            <option value="99">报名性质</option>
            <option value="0">自主预订</option>
            <option value="1">指定</option>
            <option value="2">考勤指定</option>
        </select>
    </div>
    <!-- 列表 -->
    <table class="tab-List mt10">
        <thead>
            <tr>
                <th class="span8">
                    序号
                </th>
                <th>
                    姓名
                </th>
                <th class="span8" jsrendersortfield="u.Sex" sort="desc">
                    性别
                </th>
                <th jsrendersortfield="u.TrainGrade" sort="desc">
                    培训级别
                </th>
                <th class="span12">
                    报名状态
                </th>
                <th class="span12">
                    报名性质
                </th>
            </tr>
        </thead>
        <tbody id="userList">
        </tbody>
        <tfoot>
        </tfoot>
    </table>
    <div class="tc mt10">
        <a id="btnBack" class="btn btn-cancel" onclick=" window.location.href = '/DepSelfCourseAppointSearch/DepSelfCourseAppointSearch?p=1'; ">
            返回</a>
    </div>
</div>
<script id="userListTemplate" type="text/x-jsrender">
    {{for #data}}
    <tr>
        <td class="tc" style="vertical-align:top">
            {{:#index+1}}
        </td>    
        <td>{{>Realname}}</td> 
        <td>{{:SexStr}}</td> 
        <td>{{:TrainGrade}}</td> 
        <td>{{>ApplyStr}}</td> 
        <td>{{>ApplyPropertiesStr}}</td> 
    </tr> 
    {{/for}}
</script>
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        initSearch();
        InitData();
    });

    function InitData() {
        var trainGrade = "";
        $("input[name=cbxTrainGrade]").each(function () {
            if ($(this).attr("checked")) {
                trainGrade += $(this).val()+",";
            }
        });
        var v = "courseId=@course.Id&realName=" + escape(getSearchWord("realname"))
            + "&traingrade=" + trainGrade
                + "&apply=" +  $("#sltOrder").val()
                    + "&appoint=" + $("#sltIsAppoint").val();
        $("#userList").JsRenderData({
            sourceUrl: '/DepSelfCourseAppointSearch/GetDepCourseAppointUserList?' + v,
            isPage: true,
            pageSize: 10,
            pageIndex: 1,
            jsRenderSortField: "u.UserId",
            jsRenderASC: "desc",
            templateID: "userListTemplate"
        });
    }
</script>
