@using LiXinLanguage
@{
    ViewBag.Title = NavigateMenuLanguage.LogManage;
}
<div class="main-c">
    @(Html.Action("SiteMapLink", "Common", new { linkName = "LogManage" }))
    <div class="tab-bk mt10">
        <input type="hidden" id="tabtype" value="0"/>
        <ul id="tab">
            <li class="On" id="a_type_0" onclick="chooseLogType(0);">系统日志</li>
            <li id="a_type_1" onclick="chooseLogType(1);">培训日志</li>
        </ul>
    </div>
    <div id="div_LogContent">
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        chooseLogType(0);
    });
    function chooseLogType(id) {
        $("#tab li").removeClass("On");
        $("#tab #a_type_" + id).addClass("On");
        var url = "";
        switch (id) {
            case 0:
                url = "/SystemManage/SystemLogList?t="+new Date();
                break;
            case 1:
                url = "/SystemManage/SystemLogTrainList?t=" + new Date();
                break;
            default: break;

        }
        $.get(url, function(data) {
            $("#div_LogContent").html(data);
        });
    }

</script>
